<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/button_back"
        android:layout_width="93px"
        android:layout_height="139px"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/button_back"

        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1378px"
        android:layout_height="139px"
        android:src="@drawable/wo_sport_types"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_menu"
        android:layout_width="@dimen/button_menu_width"
        android:layout_height="@dimen/button_menu_heigth"
        android:layout_marginTop="@dimen/button_menu_margin_top"
        android:layout_marginEnd="@dimen/button_menu_margin_end"
        android:src="@drawable/button_menu"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="@string/workout_rating"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintStart_toStartOf="@+id/gridLayout2"
        app:layout_constraintTop_toBottomOf="@+id/button_back" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="@dimen/WORating_grid_item_width"
            android:layout_height="@dimen/WORating_grid_item_heigth"
            android:layout_margin="@dimen/home_item_margin"
            android:src="@drawable/trainer_card1"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/zayceva"
            android:layout_width="@dimen/WORating_grid_item_width"
            android:layout_height="@dimen/WORating_grid_item_heigth"
            android:layout_margin="@dimen/home_item_margin"
            android:src="@drawable/trainer_card2"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="@dimen/WORating_grid_item_width"
            android:layout_height="@dimen/WORating_grid_item_heigth"
            android:layout_margin="@dimen/home_item_margin"
            android:src="@drawable/trainer_card3"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="@dimen/WORating_grid_item_width"
            android:layout_height="@dimen/WORating_grid_item_heigth"
            android:layout_margin="@dimen/home_item_margin"
            android:src="@drawable/trainer_card4"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="@dimen/WORating_grid_item_width"
            android:layout_height="@dimen/WORating_grid_item_heigth"
            android:layout_margin="@dimen/home_item_margin"
            android:src="@drawable/trainer_card3"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="@dimen/WORating_grid_item_width"
            android:layout_height="@dimen/WORating_grid_item_heigth"
            android:layout_margin="@dimen/home_item_margin"
            android:src="@drawable/trainer_card4"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="@dimen/WORating_grid_item_width"
            android:layout_height="@dimen/WORating_grid_item_heigth"
            android:layout_margin="@dimen/home_item_margin"
            android:src="@drawable/trainer_card1"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="@dimen/WORating_grid_item_width"
            android:layout_height="@dimen/WORating_grid_item_heigth"
            android:layout_margin="@dimen/home_item_margin"
            android:src="@drawable/trainer_card2"
            android:scaleType="centerCrop"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>